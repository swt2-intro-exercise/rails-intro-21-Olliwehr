<h1>Edit the author</h1>

<%= form_with(model: @author, local: true) do |form| %>

  <% if @author.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@author.errors.count, "error") %> prohibited
        this author from being updated:
      </h2>
      <ul>
        <% @author.errors.full_messages.each do |error_message| %>
          <li><%= error_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :first_name %>
    <br>
    <%= form.text_field :first_name %>
  </p>

  <p>
    <%= form.label :last_name %>
    <br>
    <%= form.text_area :last_name %>
  </p>

  <p>
    <%= form.label :homepage %>
    <br>
    <%= form.text_area :homepage %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', authors_path %>